---
import { ChevronRight } from "@lucide/astro";

import type { Documentation } from "../models";

interface Props {
  itemDocu: Documentation["data"];
}

const {
  itemDocu: { description, icon, url, title, number },
} = Astro.props;

const gradient = {
  basico: "from-blue-500 to-purple-600",
  frameworks: "from-purple-500 to-pink-600",
  islas: "from-pink-500 to-rose-600",
  markdown: "from-rose-500 to-orange-600",
  porque: "from-orange-500 to-amber-600",
  "que-es": "from-amber-500 to-yellow-600",
  utilidades: "from-yellow-500 to-green-600",
}[url];

const getUrlDocu = (url: string) => `/docu/${url}`;
---

<a href={getUrlDocu(url)} class="h-full">
  <div
    class="flex flex-col h-full group relative bg-card border border-border rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden"
  >
    {/* Gradient Background */}
    <div
      class={`absolute inset-0 bg-linear-to-br ${gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}
    >
    </div>

    <div class="relative">
      <div class="flex items-start justify-between mb-4">
        <div class={`text-4xl bg-linear-to-br ${gradient} bg-clip-text`}>
          {icon}
        </div>
        <div class="text-sm font-semibold text-muted-foreground">
          Lecci√≥n {number}
        </div>
      </div>

      <h3
        class="text-xl font-bold mb-2 group-hover:text-primary transition-colors"
      >
        {title}
      </h3>

      <p class="text-muted-foreground text-sm leading-relaxed mb-4">
        {description}
      </p>

      <div
        class="flex items-center mt-auto text-primary font-medium text-sm group-hover:gap-2 gap-1 transition-all"
      >
        Comenzar
        <ChevronRight class="w-4 h-4" />
      </div>
    </div>
  </div>
</a>
